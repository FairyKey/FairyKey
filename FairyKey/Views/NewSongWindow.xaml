<Window x:Class="FairyKey.Views.NewSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FairyKey"
        mc:Ignorable="d"
        Title="New Sheet" Height="450" Width="360" MinHeight="270" MinWidth="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5,5,5,5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Title:" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="Title_Txtbox" Margin="5"/>

            <Label Grid.Row="1" Content="Artist:" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="Artist_Txtbox" Margin="5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" IsHitTestVisible="False" Text="(Optional)" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=Artist_Txtbox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Label Grid.Row="2" Content="Creator:" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="Creator_Txtbox" Margin="5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" IsHitTestVisible="False" Text="(Optional)" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=Creator_Txtbox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Label Grid.Row="3" Content="Sheet:" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="SongData_Txtbox" Margin="5" 
                     AcceptsReturn="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextChanged="SongData_Txtbox_TextChanged"/>
        </Grid>

        <Grid Grid.Row="1" Margin="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="1" x:Name="Notes_lbl" Content="Notes: 0" Margin="0, 0, 40, 0"/>
            <Button Grid.Column="2" x:Name="Cancel_Btn" Content="Cancel" Width="80" Margin="5" Click="Cancel_Btn_Click" />
            <Button Grid.Column="3" x:Name="Save_Btn" Content="Save" Width="80" Margin="5" Click="Save_Btn_Click"/>
        </Grid>
    </Grid>
</Window>